<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchoolDetailApiDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CornerCut">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="Theme.SchoolDetailApiDemo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SchoolDetailApiDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SchoolDetailApiDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="edt_style" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/yello</item>
        <item name="android:textSize">20sp</item>
        <item name="colorOnSurface">@android:color/transparent</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="btnStyle">
        <item name="android:background">@color/Darkkyellow</item>
        <item name= "android:topLeftRadius">@dimen/dimen0dp</item>
        <item name="backgroundTint">@color/Darkkyellow</item>
        <item name= "android:topRightRadius">@dimen/dimens100dp</item>
        <item name= "android:bottomRightRadius">@dimen/dimens25dp</item>
        <item name= "android:bottomLeftRadius">@dimen/dimens25dp</item>
    </style>

    <style name="MyEditTextStyle" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:background">@color/gray</item> //NO UNDERBAR
        <item name="android:maxLines">1</item>
        <item name="android:height">28dp</item> //COMMON HEIGHT
    </style>

<!--chip selector-->

    <style name="Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/colorRole</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/stroke_tint</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
        <item name="backgroundColor">@color/red</item>
    </style>
</resources>